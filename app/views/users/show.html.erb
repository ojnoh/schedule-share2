<%= flash[:notice] %>
<div class = "container px-5 px-sm-0">
  <div class = "row">


    <div class = "col-4">
      <h4>ユーザー情報</h4>
      <%= render 'info', user: @user %>
    </div>


    <div class = "col-8">
      <!-- いいね機能 -->
      <%= render 'favorites/favorites', user: @user %>

      <!-- カレンダー機能 -->
      <h4>カレンダー</h4>
      <%= month_calendar events: @events do |date, events| %>
      <%= date.day %>
      <% events.each do |events| %>
        <div>
          <%= events.title %>
        </div>
      <% end %>
    <% end %>
    </div>
  </div>
</div>