<div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-3">
      <h4>ユーザー情報</h4>
      <%= render 'info', user: current_user %>
    </div>
    <div class = "col-8">
      <h4>ユーザー一覧</h4>
      <table class = "table table-hover">

        <thead class = "thead-light">
          <tr>
            <th>画像</th>
            <th>ニックネーム</th>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>

        <% @users.each do |users| %>
        <tbody>
          <tr>
            <td><%# attachment_image_tag(user, :profile_image_id, :fill, 50, 50, fallback: "no-image-.jpg") %></td>
            <td><%= users.nickname %></td>
            <td><%= users.genre %></td>
            <td><%# link_to "詳細ページ", %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>