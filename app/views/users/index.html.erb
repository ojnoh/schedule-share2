<%= flash[:notice] %><div class = "container px-5 px-sm-0">
  <div class = "row">
    <div class = "col-4">
      <h4>ユーザー情報</h4>
      <%= render 'info', user: current_user %>
    </div>


    <div class = "col-8">

      <%= render 'search', user: current_user %>
      <h4>ユーザー一覧</h4>
      <table class = "table table-hover">

        <thead class = "thead-light">
          <tr>
            <th>画像</th>
            <th>ニックネーム</th>
            <th>ジャンル</th>
            <th>いいねされた数</th>
            <th></th>
          </tr>
        </thead>

        <% @users.each do |users| %>
        <tbody>
          <tr>
            <td><%= attachment_image_tag users, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></td>
            <td><%= users.nickname %></td>
            <td><%= users.genre %></td>
            <td><%= users.favorite_users.count %> いいね</td>
            <td><%= link_to "詳細ページ", user_path(users.id), class: "btn btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>